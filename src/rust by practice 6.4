// Приклад 4: Розпакування кортежу
fn main() {
    let tup = (1, 6.4, "hello");

    // Розпаковка кортежу
    let (x, z, y) = tup;

    assert_eq!(x, 1);
    assert_eq!(y, "hello");
    assert_eq!(z, 6.4);

    println!("Success!");
}

// Приклад 5: Перестановка значень при розпаковці кортежу
fn main() {
    let (x, y, z);

    // Заміна місцями елементів кортежу
    (z, x, y) = (1, 2, 3);

    assert_eq!(x, 3);
    assert_eq!(y, 1);
    assert_eq!(z, 2);

    println!("Success!");
}

// Приклад 6: Використання функції для обчислення
fn main() {
    // Виклик функції та обчислення
    let (x, y) = sum_multiply((2, 3));

    assert_eq!(x, 5);
    assert_eq!(y, 6);

    println!("Success!");
}

fn sum_multiply(nums: (i32, i32)) -> (i32, i32) {
    (nums.0 + nums.1, nums.0 * nums.1)
}
