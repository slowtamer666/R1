use std::collections::HashMap;

fn main() {
    let mut scores = HashMap::new();
    scores.insert("Sunface", 98);
    scores.insert("Daniel", 95);
    scores.insert("Ashley", 69.0);
    scores.insert("Katie", "58");

    // Get returns an Option<&V>
    let score = scores.get("Sunface");
    assert_eq!(score, Some(&98)); // We need to assert the reference of value, not just the value itself.

    if scores.contains_key("Daniel") {
        // Indexing returns a value V
        let score = scores["Daniel"];
        assert_eq!(score, 95); // Fill the value here
        scores.remove("Daniel");
    }

    assert_eq!(scores.len(), 3); // After removing "Daniel", length is 3.

    for (name, score) in scores {
        println!("The score of {} is {}", name, score);
    }
}
